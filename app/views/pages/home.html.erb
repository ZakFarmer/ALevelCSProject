<div class="row">
  <div class="col-3">
    <div class="card">
      <div class="card-footer text-center">
        <div class="row">
          <div class="col-sm-2">
            <img src="<%= current_user.avatar %>" height="50px" width="50px" class="rounded-img home-avatar">
          </div>
          <div class="col-sm-10">
            <h4 style="margin-top:10px;"><%= current_user.username %></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6" style="text-align: left;">
            Followers<br>
            <h5>1200000</h5>
          </div>
          <div class="col-sm-6" style="text-align: left;">
            Following
            <h5>2</h5>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6" style="text-align: left;">
            Posts<br>
            <h5>160</h5>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-6">
    <%= render 'components/post_form' %>
    <% for @p in @posts %>
    <div class="card post-panel">
      <div class="card-block row">
        <div class="col-sm-1">
          <img src="<%= User.find(@p.user_id).avatar %>" class="rounded-img" height="50px" width="50px"></img>
        </div>
        <div class="col-sm-11">
          <p class="post-title"><span class="post-owner"><a href="/user/<%= User.find(@p.user_id).username %>"><%= User.find(@p.user_id).username %></a></span> - <span class="post-creation"><%= @p.created_at.to_formatted_s(:short) %></span></p>
          <p class="post-content"><%= @p.content %></p>
        </div>
        <div class="col-sm-12">
          <p class="post-links">
            <span class="fa fa-reply g-links" aria-hidden="true"></span>
            <span class="fa fa-heart g-links" aria-hidden="true"></span>
            <span class="fa fa-ellipsis-h g-links" aria-hidden="true"></span>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-3">
    <div class="card">
      <div class="card-block">
        <p style="opacity: 0.5; font-size: 75%; padding-top: 10px; padding-left: 10px; padding-right: 10px;">This should contain some information about DevSocial. Not sure exactly what to put here yet though.</p>
      </div>
    </div>
  </div>
</div>
